generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String         @id @default(uuid())
  email              String         @unique
  password           String?
  name               String
  role               Role           @default(AGENT)
  avatar             String?
  googleId           String?        @unique
  isActive           Boolean        @default(true)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  googleAccessToken  String?
  googleRefreshToken String?
  googleTokenExpiry  DateTime?
  campaigns          Campaign[]     @relation("CampaignCreator")
  contacts           Contact[]      @relation("AssignedContacts")
  conversations      Conversation[] @relation("AssignedConversations")
  messages           Message[]      @relation("AgentMessages")
  tickets            Ticket[]       @relation("AssignedTickets")

  @@map("users")
}

model Contact {
  id            String         @id @default(uuid())
  name          String
  email         String?
  phone         String?        @unique
  source        Source         @default(MANUAL)
  status        ContactStatus  @default(NEW)
  score         Int            @default(0)
  tags          String[]
  customFields  Json?
  assignedToId  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  whatsappJid   String?
  assignedTo    User?          @relation("AssignedContacts", fields: [assignedToId], references: [id])
  conversations Conversation[]
  orders        Order[]
  tickets       Ticket[]

  @@map("contacts")
}

model Conversation {
  id            String             @id @default(uuid())
  contactId     String
  channel       Channel
  status        ConversationStatus @default(OPEN)
  assignedToId  String?
  lastMessageAt DateTime           @default(now())
  metadata      Json?
  threadId      String?            // OpenAI Thread ID for maintaining context
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  assignedTo    User?              @relation("AssignedConversations", fields: [assignedToId], references: [id])
  contact       Contact            @relation(fields: [contactId], references: [id], onDelete: Cascade)
  messages      Message[]
  orders        Order[]
  tickets       Ticket[]

  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  senderId       String?
  senderType     SenderType
  content        String
  messageType    MessageType  @default(TEXT)
  metadata       Json?
  isRead         Boolean      @default(false)
  sentAt         DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User?        @relation("AgentMessages", fields: [senderId], references: [id])

  @@map("messages")
}

model Campaign {
  id              String         @id @default(uuid())
  name            String
  type            CampaignType
  channel         Channel
  status          CampaignStatus @default(DRAFT)
  targetSegment   Json?
  messageTemplate String
  scheduledAt     DateTime?
  completedAt     DateTime?
  createdById     String
  metrics         Json?          @default("{\"read\": 0, \"sent\": 0, \"replied\": 0, \"delivered\": 0}")
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  createdBy       User           @relation("CampaignCreator", fields: [createdById], references: [id])

  @@map("campaigns")
}

model WhatsAppSession {
  id          String    @id @default(uuid())
  sessionName String    @unique
  phoneNumber String?
  isActive    Boolean   @default(false)
  qrCode      String?
  lastSeen    DateTime?
  metadata    Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("whatsapp_sessions")
}

model AIConfig {
  id              String   @id @default(uuid())
  name            String   @unique
  systemPrompt    String
  model           String   @default("gpt-4-turbo-preview")
  temperature     Float    @default(0.7)
  maxTokens       Int      @default(1000)
  isActive        Boolean  @default(true)
  autoReply       Boolean  @default(false)
  businessHours   Json?
  fallbackMessage String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("ai_configs")
}

model Assistant {
  id                  String                 @id @default(uuid())
  userId              String
  name                String
  description         String?
  instructions        String
  model               String                 @default("gpt-4-turbo-preview")
  temperature         Float                  @default(0.7)
  openaiId            String?                @unique
  tools               Json?
  fileIds             String[]
  metadata            Json?
  isActive            Boolean                @default(true)
  createdAt           DateTime               @default(now())
  updatedAt           DateTime               @updatedAt
  isWhatsAppResponder Boolean                @default(false)
  delegatesTo         String[]
  specialty           String?
  testMessages        AssistantTestMessage[]

  @@map("assistants")
}

model AssistantTestMessage {
  id          String    @id @default(uuid())
  assistantId String
  role        String
  content     String
  metadata    Json?
  createdAt   DateTime  @default(now())
  assistant   Assistant @relation(fields: [assistantId], references: [id], onDelete: Cascade)

  @@map("assistant_test_messages")
}

model SmartTag {
  id          String   @id @default(uuid())
  name        String
  description String?
  color       String   @default("#9D39FE")
  icon        String?
  conditions  Json?
  isAutomatic Boolean  @default(false)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("smart_tags")
}

model Order {
  id             String        @id @default(uuid())
  orderNumber    String        @unique
  contactId      String
  conversationId String?
  status         OrderStatus   @default(PENDING)
  notes          String?
  totalAmount    Float         @default(0)
  pickupDate     DateTime?
  completedAt    DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  items          OrderItem[]
  contact        Contact       @relation(fields: [contactId], references: [id], onDelete: Cascade)
  conversation   Conversation? @relation(fields: [conversationId], references: [id])

  @@map("orders")
}

model OrderItem {
  id          String   @id @default(uuid())
  orderId     String
  productName String
  quantity    Int      @default(1)
  unitPrice   Float    @default(0)
  subtotal    Float    @default(0)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model Ticket {
  id             String         @id @default(uuid())
  ticketNumber   String         @unique
  contactId      String
  conversationId String?
  type           TicketType     @default(COMPLAINT)
  status         TicketStatus   @default(OPEN)
  priority       TicketPriority @default(MEDIUM)
  subject        String
  description    String?
  resolution     String?
  assignedToId   String?
  resolvedAt     DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  assignedTo     User?          @relation("AssignedTickets", fields: [assignedToId], references: [id])
  contact        Contact        @relation(fields: [contactId], references: [id], onDelete: Cascade)
  conversation   Conversation?  @relation(fields: [conversationId], references: [id])

  @@map("tickets")
}

enum Role {
  ADMIN
  MANAGER
  AGENT
}

enum Source {
  WHATSAPP
  INSTAGRAM
  FACEBOOK
  TIKTOK
  MANUAL
  IMPORT
  WEBSITE
}

enum ContactStatus {
  NEW
  CONTACTED
  QUALIFIED
  PROPOSAL
  NEGOTIATION
  WON
  LOST
}

enum Channel {
  WHATSAPP
  INSTAGRAM
  FACEBOOK
  TIKTOK
  EMAIL
  WEB
}

enum ConversationStatus {
  OPEN
  PENDING
  CLOSED
}

enum SenderType {
  CONTACT
  AGENT
  AI
  SYSTEM
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  LOCATION
  CONTACT_CARD
}

enum CampaignType {
  BROADCAST
  AUTOMATED
  DRIP
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  RUNNING
  PAUSED
  COMPLETED
  CANCELLED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  COMPLETED
  CANCELLED
}

enum TicketType {
  COMPLAINT
  QUESTION
  RETURN
  EXCHANGE
  OTHER
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  PENDING
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
